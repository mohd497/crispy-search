%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle{'aria-expanded': 'true', data: {target: '.navbar-collapse', toggle: 'collapse'}, type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar


      = link_to 'Crispy Search', root_path, class: 'navbar-brand'

    .navbar-collapse.collapse{'aria-expanded': 'true'}
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?

          %li.dropdown.hidden-xs
            %a.dropdown-toggle{href: '#', 'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown'}
              = user_avatar

            %ul.dropdown-menu
              %li= link_to fa_icon('upload' ,text: 'Upload Keywords'), '#'
              %li= link_to fa_icon('power-off', text: 'Logout'), destroy_user_session_path, method: :delete

          %li.visible-xs= link_to fa_icon('upload' ,text: 'Upload Keywords'), '#'
          %li.visible-xs= link_to fa_icon('power-off', text: 'Logout'), destroy_user_session_path, method: :delete

        - else
          %li
            = button_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-danger navbar-btn' do
              = fa_icon('google', text: 'Sign in with Google')




